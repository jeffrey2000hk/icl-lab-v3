<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="vertical" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/imageView1" android:layout_width="wrap_content" android:layout_height="130.0dip" android:src="@drawable/welcome" />
    <TextView android:gravity="center" android:id="@id/thankyou_machineID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Welcome to the Computer Lab. To get a computer, please press &quot;Get Started&quot; to complete the registration process with your Student ID card." />
    <Button android:id="@+id/btn_welcome" android:background="@drawable/empty_w" android:layout_width="500.0dip" android:layout_height="wrap_content" android:text="Get Started!" android:onClick="load_input" />
    <TableRow android:id="@id/tableRow1" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_launcher" />
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:id="@id/textView2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="This system is designed, programmed and debugged by Digital Sergeant" />
            <TextView android:gravity="center" android:id="@id/view_person" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="For any bugs, please report them to ds.hkbuas@gmail.com"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jeffrey Lee All Rights Reserved"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/button"
            android:background="@drawable/button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:onClick="welcome_main_menu" />
    </TableRow>
</LinearLayout>