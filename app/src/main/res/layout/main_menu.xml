<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/thankyou_machineID" android:padding="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Please select an item from the menu" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
        <TableRow android:gravity="top" android:id="@id/tableRow1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="100.0">
            <Button android:id="@id/from_seating_to_input" android:background="@drawable/button_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Student Screen" android:onClick="btn_main_student"
                android:minHeight="60dp"
                android:minWidth="300dp" />
        </TableRow>
        <TableRow android:gravity="top" android:id="@id/tableRow2" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="100.0">
            <Button android:id="@id/button2" android:background="@drawable/button_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lab Console" android:onClick="btn_main_ds_console"
                android:minWidth="300dp"
                android:minHeight="60dp" />
        </TableRow>
        <TableRow android:gravity="top" android:id="@id/tableRow3" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="100.0">
            <Button android:id="@+id/button3" android:background="@drawable/button_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DS Duty" android:onClick="btn_main_ds_sub"
                android:minWidth="300dp"
                android:minHeight="60dp" />
        </TableRow>
        <TableRow android:id="@id/tableRow4" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="100.0"
            android:visibility="gone">
            <Button android:id="@+id/button4" android:background="@drawable/button_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Teacher Surface" android:onClick="btn_main_teacher_surface"
                android:minWidth="300dp"
                android:minHeight="60dp" />
        </TableRow>
    </LinearLayout>
</LinearLayout>